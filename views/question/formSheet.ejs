<div class="row justify-content-center">
    <div class="col-md-8 mt-4">
        <div class="card">
            <div class="card-header">
                <h4><%= title_form %></h4>
            </div>
            <div class="card-body">
                <form method='post' action='/question/questionsForm/<%=form_id%>'>
                    <div class='form-group m-4'>
                        <h5 class='my-4'>回答者</h5>
                        <input type='text' class='form-control mt-3 mb-5' value='<%= user_name %>' disabled>
                    </div>
                    <hr>
                    <% for(let key in question_parts){ %>
                        <div class='form-group m-4'>
                            <h5 class='my-4'><%= question_parts[key].title_parts %></h5>
                            <% if(question_parts[key].is_radio){ %>
                                <% for(let key2 in radio){ %>
                                    <% if(question_parts[key].id === radio[key2].question_id){ %>
                                        <div class='row col-5 mx-auto'>
                                            <input type='radio' class='form-check-input' id='<%= radio[key2].id %>' name='<%= question_parts[key].id %>' value='<%= radio[key2].id %>'>
                                            <label for='<%= radio[key2].id %>'><h6><%= radio[key2].question_content %></h6></label>
                                        </div>
                                    <% } %>
                                <% } %>
                            <% }else{ %>
                                <input type='text' class='form-control mt-3 mb-5' name='<%= question_parts[key].id %>' required>
                            <% } %>
                            <hr>
                        </div>
                    <% } %>
                    <div class='text-right mt-5'>
                        <button class='btn btn-info btn-lg' type='submit'>送信</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>